{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },

    "plugins": [
        "react"
    ],

    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],

    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "globals": {
      "describe": true,
      "it": true
    },

    "rules": {
        "indent": [
            "error",
            2,
            { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "camelcase": 2,
        "no-unused-vars": 2,
        "no-undef": 2

    }
}
